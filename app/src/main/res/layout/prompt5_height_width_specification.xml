<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/real_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ВВЕДИТЕ РЕАЛЬНЫЕ РАЗМЕРЫ: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/real_height_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ВЫСОТА"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/real_size"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/input_text_height"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/real_height_text">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/real_width_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ШИРИНА"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_text_height"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/input_text_width"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/real_width_text"/>

</RelativeLayout>